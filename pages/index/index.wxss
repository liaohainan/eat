/**index.wxss**/

.top{
  position: relative;
  width:100%;
  height:500rpx;
  margin-bottom:200rpx;
  background-color: #9A4589;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 5rpx;
  border-radius: 40%;
  box-shadow: 2px 2px 2px #333;
  /*perspective: 201px;*/
  animation:deg infinite 13s;
}

.userinfo-nickname {
  color: #fff;
}

.usermotto {
  margin-top: 20px;
}
.mes-h2{
  display: block;
  padding-top:25rpx;
  color:#FFF;
}

.food-view{
  position: absolute;
  left:50%;
  bottom:-60rpx;
  margin-left:-300rpx;
  width:600rpx;
  height:120rpx;
  line-height:120rpx;
  text-align: center;
  border: 1px solid #aaa;
  border-radius: 5px;
  box-shadow: 0 0 20rpx #634A7D;
  background-color: #fff;

}
.middle-mes{
  margin-top:300rpx;
}
@keyframes deg {
  0%{
    transform:rotateY(0deg) rotateZ(0deg);
   
  }
  25%{
    transform:rotateY(90deg) rotateZ(90deg);
  }
  50%{
    transform:rotateY(180deg) rotateZ(180deg);
  }
  75%{
    transform:rotateY(270deg) rotateZ(270deg);
  }
  100%{
    transform:rotateY(360deg) rotateZ(360deg);
  }
}
.food{
  display: block;
  /*margin-bottom:200px;*/
  height:60px;
  color:crimson;
  font-size:40px;
}
.eat-btn{
  display: block;
  margin-top:40rpx;
  width:400rpx;
  height:120rpx;
  line-height: 120rpx;
  text-align: center;
  font-size:50rpx;
  border: 1px solid #634A7D;
  border-radius: 15rpx;
  color:#FFF;
  background-color: #9A4589;
}
.eat-btn-active{
  background-color: #FFCD84;
}
/* 关于 */
.about{
  position:fixed;
  right:30rpx;
  bottom:30rpx;
  width:100rpx;
  height:100rpx;
  background-color: #9A4589;
  border-radius: 50%;
  text-align: center;
  line-height:100rpx;
  color:#fff;
  font-size:30rpx;
  font-family: "黑体";
}
.about-active{
  animation:about infinite 1s;
}
@keyframes about {
  0%{
    transform:translateX(0rpx) translateX(0rpx) scale(1);
   
  }
  100%{
    transform:translateX(0rpx) translateX(0rpx) scale(100);
  }
}
